<!DOCTYPE html>
<html>
  <head>
    <title>GimeGimme</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>



<!-- 会員ログイン中 -->
<% if member_signed_in? %>
  <header id="header">
    <div class="container">
      <nav class="nav">
        <a class="sitelogo" href="/">
          <%= image_tag('logo1.png') %>
        </a>
        <ul class="navber-right">
          <li id="login-name"><%= link_to current_member.name,member_path(current_member) %>さん</li>
          <li><%= link_to "トップページ" %></li>
          <li><%= link_to "アバウト" %></li>
          <li><%= link_to "マイページ", member_path(current_member) %></li>
          <li><%= link_to "ログアウト", destroy_member_session_path, method: :delete %></li>
        </ul>
      </nav>
    </div>
  </header>

<!-- 管理者ログイン中 -->
<% elsif admin_signed_in? %>
  <header id="header-admin">
    <div class="container">
      <nav class="nav">
        <a class="sitelogo" href="/">
          <%= image_tag('logo1.png') %>
        </a>
        <ul class="navber-right">
          <li id="login-name-admin">管理者でログイン中</li>
          <li><%= link_to "トップページ" %></li>
          <li><%= link_to "会員一覧" %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
        </ul>
      </nav>
    </div>
  </header>

<!-- ゲスト -->
<% else %>
  <header id="header">
    <div class="container">
      <nav class="nav">
        <a class="sitelogo" href="/">
          <%= image_tag('logo1.png') %>
        </a>
        <ul class="navber-right">
          <li id="login-name">ゲストさん</li>
          <li><%= link_to "トップページ" %></li>
          <li><%= link_to "アバウト" %></li>
          <li><%= link_to "会員登録", new_member_registration_path %></li>
          <li><%= link_to "ログイン", member_session_path %></li>
        </ul>
      </nav>
    </div>
  </header>
<% end %>


    <div class="container">
    <%= yield %>
    </div>

  </body>
</html>
