<div class="row">
  <div class="col-xs-12">
    <h2 class="page-title">通報完了</h2>
  </div>
</div>

<div class="game-report">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="text-center">以下の内容で通報を受け付けました。</h3>
      <div class="report-box">
        <h4><strong>通報内容</strong></h4>
        <div>通報理由<div class="report-details"><%= @report.reason %></div></div>
        <div>通報内容詳細<div class="report-details"><%= @report.report %></div></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="game-report-table">
        <table>
          <caption><h4>通報ページ情報</h4></caption>
          <thead>
            <tr>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>タイトル</td>
              <td colspan="4"><%= @game.title %></td>
            </tr>
            <tr>
              <td>発売日</td>
              <td><%= @game.release.strftime("%Y年%m月%d日") %></td>
              <td></td>
              <td>コンプリート要素</td>
              <td>
                <% if @game.complete == true %>
                有
                <% else %>
                無
                <% end %>
              </td>
            </tr>
            <tr>
              <td>ゲームジャンル</td>
              <td><%= @game.genre.name %></td>
              <td></td>
              <td>周回プレイ要素</td>
              <td>
                <% if @game.orbit == true %>
                有
                <% else %>
                無
                <% end %>
              </td>
            </tr>
            <tr>
              <td>対応機種</td>
              <td>
                <% @models.each do |m| %>
                  <%= m.model.model %><br>
                <% end %>
              </td>
              <td></td>
              <td>マルチエンド方式</td>
              <td>
                <% if @game.multi_ending == true %>
                有
                <% else %>
                無
                <% end %>
              </td>
            </tr>
            <tr>
              <td>最大プレイ人数</td>
              <td><%= @game.number_of_people %>人</td>
              <td></td>
              <td>CEROレーティング</td>
              <td><%= @game.cero_rating %></td>
            </tr>
            <tr>
              <td>URL</td>
              <td colspan="4"><%= @game.site_url %></td>
            </tr>
            <tr>
            <td>内容</td>
              <td colspan="4"><%= @game.text %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

