<%= flash[:notice] %>

<div class="row">
  <div class="col-xs-12">
    <h2 class="page-title text-center">未対応の通報、問い合わせ</h2>
  </div>
</div>

<div class="row">
  <div class="col-xs-4">
    <h3 class="text-center" id="game-report">ゲーム記事通報<%= @game_reports.count %>件</h3>

    <div class="report">
      <table class= "table table-hover table-bordered table-admin">
        <thead>
          <tr>
            <th class="text-center">通報日時</th>
            <th class="text-center">通報内容</th>
          </tr>
        </thead>
        <tbody>
          <% @game_reports.each do |game| %>
            <tr class="text-center table-cel">
              <td><%= link_to admin_game_report_path(game.id) do %><%= game.created_at.strftime("%y/%m/%d %H:%M") %><% end %></td>
              <td><%= game.reason %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-xs-4">
    <h3 class="text-center" id="comment-report">コメント通報<%= @comment_reports.count %>件</h3>

    <div class="report">
      <table class= "table table-hover table-bordered table-admin">
        <thead>
          <tr>
            <th class="text-center">通報日時</th>
            <th class="text-center">通報内容</th>
          </tr>
        </thead>
        <tbody>
          <% @comment_reports.each do |comment| %>
            <tr class="text-center table-cel">
              <td><%= link_to admin_comment_report_path(comment.id) do %><%= comment.created_at.strftime("%y/%m/%d %H:%M") %><% end %></td>
              <td><%= comment.reason %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-xs-4">
    <h3 class="text-center" id="comment-report">問い合わせ<%= @contacts.count %>件</h3>

    <div class="report">
      <table class= "table table-hover table-bordered table-admin">
        <thead>
          <tr>
            <th class="text-center">問い合わせ日時</th>
            <th class="text-center">問い合わせ内容</th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
            <tr class="text-center table-cel">
              <td><%= link_to edit_admin_contact_path(contact.id) do %><%= contact.created_at.strftime("%y/%m/%d %H:%M") %><% end %></td>
              <td><%= contact.contact_text.truncate(10, separator: /\s/) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
