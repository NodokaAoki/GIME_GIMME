<div class="admin-member-side-menu">
    <div class="member-data-box">
    <div class="member-name">
      <%= member.name %>さん
      <% if member.status == '有効' %>
        <span class="label label-success">有効</span>
      <%  elsif member.status == '退会' %>
        <span class="label label-danger">退会</span>
      <%  else %>
        <span class="label label-warning">停止</span>
      <% end %>
    </div>
  </div>
  <div class="member-side-menu-li"><%= link_to "ユーザー情報の変更",edit_admin_member_path(member.id) %></div>
  <div class="member-side-menu-li">
    <%= link_to "投稿記事一覧",admin_member_games_path  %>
  </div>
  <div class="member-side-menu-li"><%= link_to admin_member_game_reports_path do %>記事通報一覧(<%= game_reports.count %>件)<% end %></div>
  <div class="member-side-menu-li">
    <%= link_to "コメント履歴",admin_member_comments_path  %>
  </div>
  <div class="member-side-menu-li"><%= link_to admin_member_comment_reports_path do %>コメント通報一覧(<%= comment_reports.count %>件)<% end %></div>
  <div class="member-side-menu-li warning-mail"><%= link_to "警告メールを送信する",new_admin_warning_mail_path(member_id: member.id) %></div>
</div>