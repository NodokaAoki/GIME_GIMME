<div class="row">
  <div class="col-xs-3">
    <%= render 'side_menu',member: @member,game_reports: @game_reports,comment_reports: @comment_reports %>
  </div>
  <div class="col-xs-9">
    <div class="member-data">
      <h2 class="game-index">ゲーム記事通報一覧</h2>

      <div class="report">
        <table class= "table table-hover table-bordered table-admin">
          <thead>
            <tr>
              <th class="text-center">ゲームタイトル</th>
              <th class="text-center">通報日</th>
              <th class="text-center">通報内容</th>
              <th class="text-center">ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @game_reports_data.each do |game| %>
              <tr class="text-center table-cel">
                <td><%= link_to game.game.title,admin_game_path(game.game.id) %></td>
                <td><%= game.created_at.strftime("%y/%m/%d") %></td>
                <td><%= game.reason %></td>
                <td><%= game.status %></td>
                <td><%= link_to "通報詳細",admin_game_report_path(game.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
        <div class="text-center"><%= paginate @game_reports_data %></div>
    </div>
  </div>
</div>
