<div class="row">
  <div class="col-xs-3">
    <%= render 'side_menu',member: @member,game_reports: @game_reports,comment_reports: @comment_reports %>
  </div>
  <div class="col-xs-9">
    <div class="member-data">
      <h2 class="game-index">コメント通報一覧</h2>

  <div class="report">
        <table class= "table table-hover table-bordered table-admin">
          <thead>
            <tr>
              <th class="text-center">投稿記事</th>
              <th class="text-center">通報日時</th>
              <th class="text-center">通報内容</th>
              <th class="text-center">ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @comment_reports.each do |comment| %>
              <tr class="text-center table-cel">
                <td><%= link_to comment.comment.game.title,admin_game_path(comment.comment.game.id) %></td>
                <td><%= comment.created_at.strftime("%y/%m/%d %H:%M") %></td>
                <td><%= comment.reason %></td>
                <td><%= comment.status %></td>
                <td><%= link_to "通報詳細",admin_comment_report_path(comment.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
        <div class="text-center"><%= paginate @comment_reports_data %></div>
    </div>
  </div>
</div>
