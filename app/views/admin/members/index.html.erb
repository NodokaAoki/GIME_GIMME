<div class="row">
	<div class="col-xs-12">
		<h2 class="page-title">会員一覧</h2>

		<div class="members">
			<table class= "table table-hover table-bordered table-admin">
				<thead>
					<tr>
						<th class="text-center">ID</th>
						<th class="text-center">アカウント名</th>
						<th class="text-center">メールアドレス</th>
						<th class="text-center">ステータス</th>
						<th class="text-center">通報回数</th>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<% @members.each do |member| %>
						<tr class="text-center table-admin">
							<td><%= member.id %></td>
							<td><%= member.name %></td>
							<td><%= member.email %></td>
							<td><p class="status">
								<% if member.status == '有効' %>
									<span class="label label-success">有効</span>
								<%  elsif member.status == '退会' %>
									<span class="label label-danger">退会</span>
								<%  else %>
									<span class="label label-warning">停止</span>
								<% end %></p>
							</td>
							<td><%= member.report_count %></td>
							<td class="text-center"><%= link_to "編集する", edit_admin_member_path(member.id),class: "btn btn-info btn-sm btn-edit" %><%= link_to "投稿一覧",admin_member_path(member.id),class: "btn btn-info btn-sm btn-show" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
