<div class="row">
  <div class="col-xs-12">
    <h2 class="page-title" id="game-report">問い合わせ一覧</h2>

    <div class="report">
      <table class= "table table-hover table-bordered table-admin">
        <thead>
          <tr>
            <th class="text-center">名前</th>
            <th class="text-center">問い合わせ日時</th>
            <th class="text-center">問い合わせ内容</th>
            <th class="text-center">ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
            <tr class="text-center table-cel">
              <td><%= contact.name %></td>
              <td><%= contact.created_at.strftime("%y/%m/%d %H:%M") %></td>
              <td><%= contact.contact_text.truncate(10, separator: /\s/) %></td>
              <td><%= contact.status %></td>
              <td><%= link_to "詳細",edit_admin_contact_path(contact.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="text-center"><%= paginate @contacts %></div>
  </div>
</div>