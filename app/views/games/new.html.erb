<div class="row">
	<div class="col-xs-12">
		<h2 class="page-title">ゲーム新規投稿</h2>
	</div>
</div>

<%= form_for(@game, html:{class: "form-inline"}) do |f| %>

	<div class="new-game-form">

		<div class="row">
			<div class="col-xs-3">
				ゲームタイトル
			</div>
			<div class="col-xs-7">
				<%= f.text_field :title, :size=>'60%', class: "form-control",placeholder: "タイトル入力" %>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				発売日
			</div>
			<div class="col-xs-7">
				<%= raw sprintf(
					f.date_select(
						:release,
						start_year: 1900, #選択可能開始年
						use_month_numbers: true,#月を数字で表示
						date_separator: '%s'), #年月日仕切り
					'年 ','月 ') + '日'
				%>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				最大プレイ人数
			</div>
			<div class="col-xs-7">
				<%= f.text_field :number_of_people, :size=>'5%', class: "form-control",placeholder: "人数" %>人
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				コンプリート要素
			</div>
			<div class="col-xs-7">
				<span class="radio">
					<%= f.radio_button :complete, true %>有
				</span>
				<span class="radio">
					<%= f.radio_button :complete, false %>無
				</span>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				周回プレイ要素
			</div>
			<div class="col-xs-7">
				<span class="radio">
					<%= f.radio_button :orbit, true %>有
				</span>
				<span class="radio">
					<%= f.radio_button :orbit, false %>無
				</span>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				マルチエンド方式
			</div>
			<div class="col-xs-7">
				<span class="radio">
					<%= f.radio_button :multi_ending, true %>有
				</span>
				<span class="radio">
					<%= f.radio_button :multi_ending, false %>無
				</span>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				CEROレーティング
			</div>
			<div class="col-xs-7">
				<%= f.select :cero_rating, Game.cero_ratings.keys.to_a, {include_blank: '選択'},class: "form-control" %>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				URL
			</div>
			<div class="col-xs-7">
				<%= f.text_field :site_url, :size=>'60%', class: "form-control",placeholder: "任意" %>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-3">
				ゲーム内容
			</div>
			<div class="col-xs-7">
				<%= f.text_area :text, :size=>'60%', class: "form-control game-text",placeholder: "ゲームの内容について記述してください。（ネタバレ厳禁）" %>
			</div>
		</div>
	</div>

		<div class="row">
			<div class="col-xs-12">
			<%= f.submit "ゲーム新規作成",class: "btn btn-primary btn-block btn-lg btn-game" %>
			</div>
			</div>
		</div>

<% end %>